<Window x:Class="BbcSoundz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BbcSoundz"
        mc:Ignorable="d"
        Title="BBC Soundz Scraper" Height="800" Width="1600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:DownloadedColorConverter x:Key="DownloadedColorConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Search and Results -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="BBC Schedule Scraper" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Show Selection -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                <TextBlock Text="Select Show:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="ShowComboBox" Width="320" Height="30" 
                          DisplayMemberPath="DisplayName"
                          SelectionChanged="ShowComboBox_SelectionChanged"/>
                <Button x:Name="RefreshShowsButton" Content="Reload list" 
                        Width="110" Height="30" Margin="10,0,0,0"
                        Click="RefreshShowsButton_Click"/>
            </StackPanel>

            <!-- Progress and Status -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <ProgressBar x:Name="ProgressBar" Width="250" Height="20" 
                             VerticalAlignment="Center" Visibility="Collapsed"/>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Programmes Tree -->
            <GroupBox Grid.Row="3" Header="Available Programmes" Margin="0,0,0,10">
                <TreeView x:Name="ProgrammesTreeView"
                          SelectedItemChanged="ProgrammesTreeView_SelectedItemChanged"
                          MouseDoubleClick="ProgrammesTreeView_MouseDoubleClick">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="▶" 
                                           Foreground="LimeGreen" 
                                           FontWeight="Bold" 
                                           Margin="0,0,5,0"
                                           Visibility="{Binding IsDownloaded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           ToolTip="Already downloaded - double-click to play"/>
                                <TextBlock Text="📁" 
                                           Foreground="Orange" 
                                           FontWeight="Bold" 
                                           Margin="0,0,5,0"
                                           Visibility="{Binding IsDownloaded, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           ToolTip="Downloaded file available"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding DisplayName}" 
                                               TextWrapping="Wrap"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               Foreground="{Binding IsDownloaded, Converter={StaticResource DownloadedColorConverter}, FallbackValue=Black}"/>
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="10"
                                               Foreground="DarkGray"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>

            <!-- Selected Item Info -->
            <GroupBox Grid.Row="4" Header="Selected Show Details" Height="80">
                <StackPanel>
                    <TextBlock x:Name="SelectedShowTextBlock" Text="No show selected" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="SelectedUrlTextBlock" Text="" 
                               Foreground="Blue" TextWrapping="Wrap" 
                               Cursor="Hand" 
                               MouseLeftButtonUp="SelectedUrlTextBlock_MouseLeftButtonUp"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                      Background="Gray" ResizeBehavior="PreviousAndNext"/>

        <!-- Middle Panel - Preview Section -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Preview Title -->
            <TextBlock Grid.Row="0" Text="Programme Preview" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Preview Content -->
            <GroupBox Grid.Row="1" Header="BBC Programme Details">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="PreviewPanel" Margin="10">
                        <TextBlock x:Name="PreviewMessageTextBlock" 
                                   Text="Select a show to see preview" 
                                   FontStyle="Italic" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="Gray"/>
                        
                        <!-- Programme Image -->
                        <Border x:Name="PreviewImageBorder" 
                                Visibility="Collapsed" 
                                Margin="0,0,0,10"
                                BorderBrush="Gray" 
                                BorderThickness="1"
                                HorizontalAlignment="Center">
                            <Image x:Name="PreviewImage" 
                                   MaxWidth="300" 
                                   MaxHeight="200"
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <!-- Programme Title -->
                        <TextBlock x:Name="PreviewTitleTextBlock" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"
                                   Visibility="Collapsed"/>
                        
                        <!-- Programme Subtitle -->
                        <TextBlock x:Name="PreviewSubtitleTextBlock" 
                                   FontSize="14" 
                                   FontStyle="Italic"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"
                                   Visibility="Collapsed"/>
                        
                        <!-- Programme Description -->
                        <TextBlock x:Name="PreviewDescriptionTextBlock" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"
                                   Visibility="Collapsed"/>
                        
                        <!-- Programme Details -->
                        <StackPanel x:Name="PreviewDetailsPanel" 
                                    Visibility="Collapsed" 
                                    Margin="0,0,0,10">
                            <TextBlock x:Name="PreviewBrandTextBlock" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="PreviewDurationTextBlock" 
                                       FontSize="12" 
                                       Foreground="DarkBlue"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="PreviewDateTextBlock" 
                                       FontSize="12" 
                                       Foreground="DarkGreen"
                                       Margin="0,0,0,5"/>
                        </StackPanel>
                        
                        <!-- Loading indicator -->
                        <StackPanel x:Name="PreviewLoadingPanel" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Visibility="Collapsed">
                            <TextBlock Text="Loading preview..." 
                                       FontStyle="Italic" 
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="⏳" FontSize="16"/>
                        </StackPanel>
                        
                        <!-- Error message -->
                        <TextBlock x:Name="PreviewErrorTextBlock" 
                                   Text="" 
                                   Foreground="Red" 
                                   FontStyle="Italic"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" 
                      Background="Gray" ResizeBehavior="PreviousAndNext"/>

        <!-- Right Panel - Download Section -->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Download Title -->
            <TextBlock Grid.Row="0" Text="Download with yt-dlp" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Download Controls -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="URL:" VerticalAlignment="Center" Margin="0,0,10,0" Width="30"/>
                    <TextBox x:Name="DownloadUrlTextBox" Height="25" 
                             IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <Button x:Name="DownloadButton" Content="Download" 
                            Width="100" Height="30" Margin="0,0,10,0"
                            Click="DownloadButton_Click" IsEnabled="False"/>
                    <Button x:Name="StopDownloadButton" Content="Stop" 
                            Width="80" Height="30" Margin="0,0,10,0"
                            Click="StopDownloadButton_Click" IsEnabled="False"/>
                    <Button x:Name="ClearOutputButton" Content="Clear Output" 
                            Width="100" Height="30"
                            Click="ClearOutputButton_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Download Output -->
            <GroupBox Grid.Row="2" Header="yt-dlp Output" Margin="0,0,0,10">
                <ScrollViewer x:Name="OutputScrollViewer" VerticalScrollBarVisibility="Auto">
                    <RichTextBox x:Name="OutputRichTextBox" 
                                 IsReadOnly="True" 
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Background="Black"
                                 Foreground="White"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </GroupBox>

            <!-- Download Status -->
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <TextBlock Text="Status:" Margin="0,0,10,0"/>
                <TextBlock x:Name="DownloadStatusTextBlock" Text="Ready" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
